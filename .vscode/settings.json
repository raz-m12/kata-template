{
  // Global configuration file store in ~/.config/Code/User/settings.json. See global.json.
  "cmake.sourceDirectory": "${workspaceFolder}",
  "testMate.cpp.test.advancedExecutables": [
    {
      "pattern": "{.build,Build,BUILD,out,Out,OUT}/**/*{test,Test,TEST,kata}*",
      "cwd": "${absDirpath}",
    }
  ],
  "cmake.buildDirectory": "${workspaceFolder}/.build",
  "c-cpp-flylint.enable": false,
  "c-cpp-flylint.cppcheck.enable": false,
  "c-cpp-flylint.excludeFromWorkspacePaths": [
    "extern/*"
  ],
  // see https://www.youtube.com/watch?v=8RSxQ8sluG0
  "C_Cpp.default.configurationProvider": "ms-vscode.cmake-tools",
  "C_Cpp.codeAnalysis.clangTidy.enabled": true,
  "C_Cpp.codeAnalysis.exclude": {
    "**/.build": true,
    "**/extern": true
  },
  "C_Cpp.codeAnalysis.clangTidy.checks.enabled": [
    "*"
  ],
  "C_Cpp.codeAnalysis.clangTidy.checks.disabled": [
    "google-build-using-namespace",
    "modernize-concat-nested-namespaces",
    "llvmlibc-*",
    "llvm-*",
    // rules to be revised
    "fuchsia-*"
  ],
  "C_Cpp.codeAnalysis.runAutomatically": true,
  // clang format support
  "editor.formatOnSave": true,
  "C_Cpp.errorSquiggles": "Disabled",
  "files.associations": {
    "typeinfo": "cpp",
    "*.tcc": "cpp",
    "cassert": "cpp",
    "cctype": "cpp",
    "cerrno": "cpp",
    "cfloat": "cpp",
    "climits": "cpp",
    "clocale": "cpp",
    "cmath": "cpp",
    "cstdarg": "cpp",
    "cstddef": "cpp",
    "cstdio": "cpp",
    "cstdlib": "cpp",
    "cstring": "cpp",
    "ctime": "cpp",
    "cwchar": "cpp",
    "cwctype": "cpp",
    "unordered_map": "cpp",
    "type_traits": "cpp",
    "stdexcept": "cpp",
    "atomic": "cpp",
    "random": "cpp",
    "limits": "cpp",
    "ranges": "cpp",
    "functional": "cpp",
    "tuple": "cpp",
    "variant": "cpp"
  }
}