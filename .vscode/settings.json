{
    // Global configuration file store in ~/.config/Code/User/settings.json. See global.json.
    "cmake.sourceDirectory": "${workspaceFolder}",
    "testMate.cpp.test.advancedExecutables": [
        {
            "pattern": "{.build,Build,BUILD,out,Out,OUT}/**/*{test,Test,TEST,kata}*",
            "cwd": "${absDirpath}",
        }
    ],
    "cmake.buildDirectory": "${workspaceFolder}/.build",
    // Can be removed if everything is ok. "C_Cpp.codeAnalysis.clangTidy.useBuildPath": true,
    "c-cpp-flylint.enable": false,
    "c-cpp-flylint.cppcheck.enable": false,
    "C_Cpp.default.configurationProvider": "ms-vscode.cmake-tools",
    "C_Cpp.codeAnalysis.clangTidy.enabled": true,
    "C_Cpp.codeAnalysis.exclude": {
        "**/.build": true,
        "**/extern": true
    },
    "C_Cpp.codeAnalysis.clangTidy.checks.enabled": [
        "*"
    ],
    // see https://stackoverflow.com/questions/70478014/c-clang-tidy-gives-errors-related-to-llvm-libc
    "C_Cpp.codeAnalysis.clangTidy.checks.disabled": [
        "google-build-using-namespace",
        "modernize-concat-nested-namespaces",
        "llvmlibc-*",
        "llvm-*",
        "fuchsia-*",
        "altera-id-dependent-backward-branch"
    ],
    "C_Cpp.codeAnalysis.runAutomatically": true,

    // clang format support
    "editor.formatOnSave": true,
    "files.associations": {
        "vector": "cpp",
        "any": "cpp",
        "array": "cpp",
        "atomic": "cpp",
        "bit": "cpp",
        "*.tcc": "cpp",
        "chrono": "cpp",
        "cmath": "cpp",
        "compare": "cpp",
        "concepts": "cpp",
        "string": "cpp",
        "unordered_set": "cpp",
        "exception": "cpp",
        "algorithm": "cpp",
        "memory": "cpp",
        "memory_resource": "cpp",
        "optional": "cpp",
        "random": "cpp",
        "string_view": "cpp",
        "type_traits": "cpp",
        "utility": "cpp",
        "functional": "cpp",
        "fstream": "cpp",
        "iosfwd": "cpp",
        "istream": "cpp",
        "limits": "cpp",
        "mutex": "cpp",
        "new": "cpp",
        "numeric": "cpp",
        "ostream": "cpp",
        "ranges": "cpp",
        "ratio": "cpp",
        "sstream": "cpp",
        "stop_token": "cpp",
        "streambuf": "cpp",
        "system_error": "cpp",
        "thread": "cpp",
        "tuple": "cpp",
        "typeinfo": "cpp",
        "variant": "cpp",
        "cctype": "cpp",
        "clocale": "cpp",
        "condition_variable": "cpp",
        "cstdarg": "cpp",
        "cstddef": "cpp",
        "cstdint": "cpp",
        "cstdio": "cpp",
        "cstdlib": "cpp",
        "cstring": "cpp",
        "ctime": "cpp",
        "cwchar": "cpp",
        "cwctype": "cpp",
        "deque": "cpp",
        "list": "cpp",
