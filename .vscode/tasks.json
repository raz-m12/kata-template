{
   "tasks": [
      {
         "type": "cppbuild",
         "label": "C/C++: g++ build current kata exercise",
         "command": "cmake",
         "args": [
            "--build",
            ".build",
            "--target",
            "kata"
         ],
         "options": {
            "cwd": "${workspaceFolder}/"
         },
         "problemMatcher": [
            "$gcc"
         ],
         "group": {
            "kind": "build"
         },
         "detail": "Task generated by Debugger.",
         "dependsOn": "Build cmake config. files"
      },
      {
         "type": "shell",
         "label": "Build cmake config. files",
         "command": "cmake",
         "args": [
            "-D CMAKE_C_COMPILER=clang",
            "-D CMAKE_CXX_COMPILER=clang++",
            "-DRUN_CLANG_TIDY=OFF",
            ".."
         ],
         "options": {
            "cwd": "${workspaceFolder}/.build/"
         },
         "problemMatcher": [
            "$gcc"
         ],
         "group": "none",
         "detail": "Used to generate cmake configuration files."
        },
      {
         "type": "shell",
         "label": "Run CppCheck",
         "command": "cppcheck",
         "args": [
               "--enable=all",
               "--std=c++20",
               "--project=compile_commands.json",
               "--force"
         ],
         "options": {
               "cwd": "${workspaceFolder}/.build/"
         },
         "group": "build",
         "detail": "Generate code analysis reports",
      },
      {
         "type": "cppbuild",
         "label": "Run Clang Tidy",
         "command": "cmake",
         "args": [
            "--build",
            ".build",
            "--target",
            "kata"
         ],
         "options": {
            "cwd": "${workspaceFolder}/"
         },
         "problemMatcher": [
            "$gcc"
         ],
         "group": {
            "kind": "build"
         },
         "dependsOn": "Build using clang tidy"
      },
      {
         "type": "shell",
         "label": "Build using clang tidy",
         "command": "cmake",
         "args": [
            "-D CMAKE_C_COMPILER=clang",
            "-D CMAKE_CXX_COMPILER=clang++",
            "-DRUN_CLANG_TIDY=ON",
            ".."
         ],
         "options": {
            "cwd": "${workspaceFolder}/.build/"
         },
         "problemMatcher": [
            "$gcc"
         ],
         "group": "none",
         "detail": "Used to generate cmake configuration files."
        },
   ],
   "version": "2.0.0"
}